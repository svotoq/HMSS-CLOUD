<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:table="sap.ui.table">
    <VBox
        id="idVBoxRoomPreview">
        <form:SimpleForm
            id="idSimpleFormRoomPreview"
            title="{i18n>CreateRoom.RoomInformation}"
            editable="false"
            layout="ResponsiveGridLayout"
            labelSpanXL="5"
            labelSpanL="5"
            labelSpanM="5"
            labelSpanS="5"
            adjustLabelSpan="false"
            emptySpanXL="0"
            emptySpanL="0"
            emptySpanM="0"
            emptySpanS="0"
            columnsXL="2"
            columnsL="2"
            columnsM="2">
            <form:content>
                <core:Title text="{i18n>Additional.BlankTitle}"/>
                <Label
                    id="idLabelRoomPreviewRoomNumber"
                    text="{i18n>Room.RoomNumber}"/>
                <Text
                    id="idTextRoomPreviewRoomNumber"
                    text="{_create>Room/RoomNumber}"/>

                <Label
                    id="idLabelRoomPreviewCapacity"
                    text="{i18n>Room.Capacity}"/>
                <Text
                    id="idRoomPreviewCapacity"
                    text="{_create>Room/Capacity}"/>
                <Label
                    id="idLabelRoomPreviewEmptyPlaces"
                    text="{i18n>Room.EmptyPlaces}"/>
                <Text
                    id="idTextRoomPreviewEmptyPlaces"
                    text="{_create>Room/EmptyPlaces}"/>
                <core:Title text="{i18n>CreateRoom.AdditionalInfoTitle}"/>
                <Label
                    id="idLabelRoomPreviewTables"
                    text="{i18n>Room.Tables}"/>
                <Text
                    id="idTextRoomPreviewTables"
                    text="{_create>Room/Tables}"/>

                <Label
                    id="idLabelRoomPreviewBeds"
                    text="{i18n>Room.Beds}"/>
                <Text
                    id="idTextRoomPreviewBeds"
                    text="{_create>Room/Beds}"/>

            </form:content>
        </form:SimpleForm>
        <table:Table
            id="idRoomPreviewStudentsTable"
            class="sapUiSmallMarginTopBottom"
            selectionMode="Single"
            visibleRowCountMode="Auto"
            enableColumnFreeze="true"
            rows="{_create>SelectedStudents}">
            <table:extension>
                <OverflowToolbar
                    id="idCreateRoomStudentsToolbar"
                    design="Transparent">
                    <Title
                        id="idCreateRoomStudentsTitle"
                        text="{i18n>CreateRoom.CreateRoomStudentsTitle}"
                        titleStyle="H4"/>
                    <ToolbarSpacer id="idCreateRoomStudentsToolbarSpacer"/>
                </OverflowToolbar>
            </table:extension>
            <table:columns>
                <table:Column
                    id="idColumnRoomPreviewStudentsFullName">
                    <Label
                        id="idLabelRoomPreviewStudentsFullName"
                        text="{i18n>Student.FullName}"/>
                    <table:template>
                        <Text
                            id="idTextRoomPreviewStudentsFullName"
                            text="{parts:[
                                        '_create>FirstName',
                                        '_create>LastName',
                                        '_create>Patronymic'
                                        ],
                                    formatter: '.formatter.getStudentFullName'}"/>
                    </table:template>
                </table:Column>

                <table:Column
                    id="idColumnRoomPreviewStudentsCity">
                    <Label
                        id="idLabelRoomPreviewStudentsCity"
                        text="{i18n>Student.City}"/>
                    <table:template>
                        <Text
                            id="idTextRoomPreviewStudentsCity"
                            text="{_create>City}"/>
                    </table:template>
                </table:Column>

                <table:Column
                    id="idColumnRoomPreviewStudentsCheckIn">
                    <Label
                        id="idLabelRoomPreviewStudentsCheckIn"
                        text="{i18n>Student.CheckIn}"/>
                    <table:template>
                        <Text
                            id="idTextRoomPreviewStudentsCheckIn"
                            text="{_create>CheckIn}"/>
                    </table:template>
                </table:Column>

                <table:Column
                    id="idColumnRoomPreviewStudentsCheckOut">
                    <Label
                        id="idLabelRoomPreviewStudentsCheckOut"
                        text="{i18n>Student.CheckOut}"/>
                    <table:template>
                        <Text
                            id="idTextRoomPreviewStudentsCheckOut"
                            text="{_create>CheckOut}"/>
                    </table:template>
                </table:Column>

            </table:columns>
        </table:Table>
    </VBox>
</core:FragmentDefinition>