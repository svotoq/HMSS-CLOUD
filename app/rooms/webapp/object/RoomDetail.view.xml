<mvc:View
        controllerName="bstu.hmss.managerooms.object.RoomDetail"
        displayBlock="true"
        height="100%"
        xmlns="sap.m"
        xmlns:uxap="sap.uxap"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:facet="bstu.hmss.lib.control.facet"
        xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <uxap:ObjectPageLayout
            id="idRoomDetailPage"
            useIconTabBar="true"
            showTitleInHeaderContent="false"
            alwaysShowContentHeader="false"
            preserveHeaderStateOnScroll="true"
            headerContentPinnable="true"
            isChildPage="true"
            enableLazyLoading="true"
            upperCaseAnchorBar="false"
            showFooter="{= ${this>/CurrViewMode} !== ${constant>/VIEW_MODES/DISPLAY} || !!${message>/length}}"
            navigate="onTabSelected"
            selectedSection="ROOMINFO">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle id="idRoomDetailDynamicHeader">
                <uxap:heading>
                    <Title
                            id="idRoomDetailTitle"
                            text="{this>/BRoom/RoomNumber}"/>
                </uxap:heading>
                <uxap:actions>
                    <uxap:ObjectPageHeaderActionButton
                            id="idEditButton"
                            hideIcon="true"
                            hideText="false"
                            text="{i18n>Button.Edit}"
                            type="Transparent"
                            visible="{= ${this>/CurrViewMode} === ${constant>/VIEW_MODES/DISPLAY}}"
                            press="onPressEdit"/>
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>
         
        </uxap:headerContent>
        <uxap:sections>
            <uxap:ObjectPageSection
                    id="ROOMINFO"
                    titleUppercase="false"
                    title="{i18n>RoomDetail.RoomInfoSectionTitle}"
                    data:viewId="idRoomInfoView">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                            id="idRoomInfoSubSection">
                        <uxap:blocks>
                            <mvc:XMLView
                                    id="idRoomInfoView"
                                    viewName="bstu.hmss.managerooms.object.tabs.roomInfo.RoomInfo"
                                    data:Sections='[]'
                                    data:TabId="ROOMINFO"/>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection
                    id="ROOMSTUDENTS"
                    titleUppercase="false"
                    title="{i18n>RoomDetail.StudentsSectionTitle}"
                    data:viewId="idRoomStudentsView">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                            id="idRoomStudentsSubSection"
                            class="sapUxAPObjectPageSubSectionFitContainer">
                        <uxap:blocks>
                            <mvc:XMLView
                                    id="idRoomStudentsView"
                                    viewName="bstu.hmss.managerooms.object.tabs.students.RoomStudents"
                                    data:Sections='["Students"]'
                                    data:TabId="ROOMSTUDENTS"/>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection
                id="NOTES"
                titleUppercase="false"
                title="{i18n>RoomDetail.NotesSectionTitle}"
                data:viewId="idRoomNotesView">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        id="idRoomNotesSubSection"
                        class="sapUxAPObjectPageSubSectionFitContainer">
                        <uxap:blocks>
                            <mvc:XMLView
                                id="idRoomNotesView"
                                viewName="bstu.hmss.managerooms.object.tabs.notes.RoomNotes"
                                data:Sections='[]'
                                data:TabId="NOTES"/>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
        <uxap:footer>
            <OverflowToolbar
                    id="idGlobalActionFooter"
                    visible="{= ${this>/CurrViewMode} !== ${constant>/VIEW_MODES/DISPLAY} || !!${message>/length}}">
                <Button
                        id="idMessagePopoverButton"
                        icon="sap-icon://message-popup"
                        text="{message>/length}"
                        visible="{= !!${message>/length} }"
                        type="Emphasized"
                        press="onMessagesButtonPress"/>
                <ToolbarSpacer id="idFooterToolbarSpacer"/>
                <Button
                        id="idSaveButton"
                        text="{i18n>Button.Save}"
                        type="Emphasized"
                        visible="{= ${this>/CurrViewMode} === ${constant>/VIEW_MODES/EDIT}  &amp;&amp; ${this>/IsGlobalActionsAvailable}}"
                        press="onPressSave"/>
                <Button
                        id="idCancelButton"
                        text="{i18n>Button.Cancel}"
                        visible="{= ${this>/CurrViewMode} === ${constant>/VIEW_MODES/EDIT}  &amp;&amp; ${this>/IsGlobalActionsAvailable}}"
                        press="onPressCancel"/>
            </OverflowToolbar>
        </uxap:footer>
    </uxap:ObjectPageLayout>
</mvc:View>
