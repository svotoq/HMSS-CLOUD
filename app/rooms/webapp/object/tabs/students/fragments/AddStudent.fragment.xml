<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">
    <Dialog
            id="idAddStudentsDialog"
            title="{i18n>AddStudents.Title}"
            busyIndicatorDelay="0"
            verticalScrolling="false"
            contentWidth="85%"
            contentHeight="80%"
            binding="{this>/AddStudentDialog}"
            beforeOpen="onBeforeOpenAddStudentsDialog"
            afterOpen="onAfterOpenAddStudentsDialog"
            afterClose="onAfterCloseAddStudentsDialog">
    </Dialog>
      <core:Fragment
                    fragmentName="bstu.hmss.lib.fragments.selectStudents.SelectStudents"
                    type="XML"/>
                    <buttons>
            <Button
                    id="idButtonCloseVehicleNotes"
                    text="{messageBundle>close}"
                    press="_onPressCloseVehicleNotes"/>
                     <Button
                            id="idAddStudentsMessagePopover"
                            icon="sap-icon://message-popup"
                            type="Emphasized"
                            press="onPressShowAddStudentsMessagePopover"
                            text="{= ${message>/}.length}"
                            visible="{= !!${message>/}.length}"/>
                    <ToolbarSpacer/>
                    <Button
                            text="{i18n>Button.Review}"
                            type="Emphasized"
                            visible="{this>WizardReviewVisible}"
                            enabled="{this>WizardReviewEnabled}"
                            press="onPressCreateRoomNextStep"/>
                    <Button
                            text="{i18n>Button.Finish}"
                            type="Emphasized"
                            visible="{this>WizardFinishVisible}"
                            press="onPressWizardSubmit"/>
                    <Button
                            text="{i18n>Button.Cancel}"
                            type="Transparent"
                            press="onPressCancelRoomDialog"/>
        </buttons>
</core:FragmentDefinition>