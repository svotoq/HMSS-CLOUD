<mvc:View
    controllerName="bstu.hmss.managestudents.object.tabs.notes.StudentNotes"
    displayBlock="true"
    height="100%"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <FeedInput
        post="onPostFeedInput"
        buttonTooltip="{i18n>Button.Post}"
        showIcon="false"
        visible="{= ${this>/CurrViewMode} === ${constant>/VIEW_MODES/EDIT} }"
        class="sapUiSmallMarginTopBottom"/>
    <List
        showSeparators="Inner"
        items="{this>/StudentNotes/data}">
        <FeedListItem
            iconActive="false"
            senderActive="false"
            showIcon="false"
            sender="{this>CreatedBy}"
            timestamp="{
				path: 'this>CreatedAt',
				type: 'sap.ui.model.type.Date',
				formatOptions: {
					style: 'full',
					source: {
						pattern: 'YYYY-MM-DD'
					}
				}
			}"
            text="{this>Text}"/>
    </List>
</mvc:View>